extends layout

block stylesheets
	link(href="//cdnjs.cloudflare.com/ajax/libs/select2/4.0.0/css/select2.min.css" rel="stylesheet")

block content
	nav.navbar.navbar-default(role='navigation')
			.container-fluid
				.navbar-header
					button.navbar-toggle.collapsed(type='button' data-toggle='collapse' data-target='#bs-example-navbar-collapse-1')
						span.sr-only Toggle navigation
						span.icon-bar
						span.icon-bar
						span.icon-bar
					img(src="./img/roots-logo.png" style="width:190px;height:auto").navbar-brand

			
				#bs-example-navbar-collapse-1.collapse.navbar-collapse
					ul.nav
						ul.nav.navbar-nav.navbar-right(style="margin-top:9px")
							li
								a(href='/grove-calendar') Create Grove Activities
							li
								a(href='/student-tracker') Student Tracker

								

	.container
		h2 Create Grove Activities
		h3 Select Student
		.form-group
			input.form-control(id="student-name-search" name="name" type="text" placeholder="Search for a student")
		.form-group
			select.student-names-select.form-control#student-names-select(style={visibility: 'hidden'})

		h4.student-title
			span(id="student-icon")
			strong(id="student-name")
			span.text-muted(id="title-text")

		div.calendar-container(id="calendar-container" style="display: none")
			table.table.table-striped
				thead
					tr
						th Center
						th Activity
						th Focus Area
						th Edit
						th Remove
				tbody(id="events-list")
			div.row(id="calendar-button-container")
				button.btn.btn-info(id="create-new-event") 
					i.fa.fa-plus
					|   New Event
				button.btn.btn-success.pull-right(id="save-calendar")
					i.fa.fa-calendar
					|   Save Grove Cycle

		div.row
			form.form.activity-form(id="activity-form" style="display: none")
				fieldset
					legend(id="activity-legend")
					.form-group
						.col-xs-12.col-sm-6.col-md-4
							label(for="activity") Activity
							select.form-control(name="activity")
								option(selected disabled) Choose an activity...
					.form-group
						.col-xs-12
							label(for="focus_area") Focus Area
						.col-xs-12.col-sm-6.col-md-4
							select(name="focus_area")
								option(selected disabled) Choose a focus area...
					.col-xs-12
						button.btn.btn-danger.btn-sm.pull-right(id="cancel-event-add")
							i.fa.fa-times
							|  Close
						button.btn.btn-success.btn-sm(id="add-event") 
							i.fa.fa-plus
							span(id='add-event-text')   Add Event to Cycle
block scripts
	script(src="https://code.jquery.com/ui/1.11.4/jquery-ui.min.js")
	script(src="//cdnjs.cloudflare.com/ajax/libs/select2/4.0.0/js/select2.min.js")
	script(src="/js/grove-calendar.js")
